<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParallelGraphicProcessing.MainPage">
    <Grid RowDefinitions="*, Auto" Padding="10" RowSpacing="10">
        <Image x:Name="MyImage"
               Aspect="AspectFit"
               Grid.Row="0"
               BackgroundColor="LightGray" />
        <ScrollView Grid.Row="1">
            <HorizontalStackLayout Spacing="10">
                <Button Text="Vybrat obrázek" x:Name="PickImageBtn" Clicked="PickImageBtn_Clicked" />
                <Button Text="Obnovit" x:Name="RestoreBtn" Clicked="RestoreBtn_Clicked" />
                <Button Text="Filtr synchronně" x:Name="RedFilterUnsafeBtn" Clicked="RedFilterUnsafeBtn_Clicked" />
                <Button Text="Filtr synchronně unsafe" x:Name="RedFilterBtn" Clicked="RedFilterBtn_Clicked" />
                <Button Text="Filtr asynchronně" x:Name="RedFilterAsyncBtn" Clicked="RedFilterAsyncBtn_Clicked" />
                <Button Text="Filtr paralelně unsafe" x:Name="RedFilterParallelBtn" Clicked="RedFilterParallelBtn_Clicked" />
                <Button Text="Zrušit" x:Name="CancelBtn" Clicked="CancelBtn_Clicked" IsEnabled="False"/>
            </HorizontalStackLayout>
        </ScrollView>
        <ActivityIndicator x:Name="MyActivityIndicator" IsRunning="True" IsVisible="False" Grid.Row="0" />
    </Grid>
</ContentPage>